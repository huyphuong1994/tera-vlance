{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "module": "esnext",
    "target": "ES6",
    "lib": ["ES6", "dom", "es2020"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "~": ["./"],
      "@": ["src"],
      "src": ["src"],
      "_common": ["src/_common"],
      "_redux": ["src/_redux"],
      "pages": ["src/pages"],
      "routers": ["src/routers"],
      "states": ["src/states"],
      "styles": ["src/styles"]
    }
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "build"]
}
